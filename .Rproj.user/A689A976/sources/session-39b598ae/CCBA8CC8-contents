  filter(alphak==0.2 & alphal==0.2) %>% 
  filter(wtrig==0) %>% 
  filter(a==1) %>% 
  filter(sigmaw==.5) |> 
  mutate(pct_h=case_when(abs(pct_h)>.9~NA,
                         abs(pct_h)<.9~pct_h))
  

