  geom_tile(aes(x=betak,y=betal,fill=pct_h))+
  scale_fill_gradient2(high="blue",low="red",mid="white",
                       midpoint=0,
                       labels=scales::percent,na.value = "grey",
                       name="% Change\nHarvest",
                       limits=c(-.1,.13))+
